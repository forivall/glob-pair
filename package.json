{
  "name": "glob-pair",
  "description": "Create source to destination mappings from globs",
  "version": "2.0.1",
  "dependencies": {
    "asyncaphore": "^1.1.0",
    "babel-runtime": "^6.5.0",
    "glob": "^7.0.0",
    "is-glob": "^2.0.1",
    "lodash.foreach": "^4.1.0",
    "lodash.isarray": "^4.0.0",
    "lodash.map": "^4.2.0",
    "minimatch": "^9.0.2",
    "path-is-absolute": "^1.0.0"
  },
  "scripts": {
    "lint": "xo src/**",
    "build": "babel src -d lib",
    "watch": "babel src -d lib -w",
    "dev-watch": "babel src -d lib -s -w",
    "inspect": "jsinspect",
    "pretest": "npm run lint && npm run inspect",
    "test": "ava",
    "test-cov": "nyc -r text -r lcov ava",
    "posttest-cov": "echo 'View results with `npm run test-cov-results`.'",
    "test-cov-results": "(sleep 1; python3 -m webbrowser -t http://127.0.0.1:8123) & (cd coverage/lcov-report && python3 -m http.server 8123 -b 127.0.0.1)",
    "preversion": "npm run build && npm run test"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Jordan Klassen <forivall@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "jsinspect": "^0.7.0",
    "nyc": "^5.5.0",
    "xo": "^0.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/glob-pair.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "xo": {
    "space": 2,
    "rules": {
      "curly": [
        2,
        "multi-line",
        "consistent"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        1,
        "always-multiline"
      ],
      "no-use-before-define": [
        1
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "esnext": true,
        "semicolon": false
      }
    ]
  },
  "optionalDependencies": {
    "path-format": "^1.2.1",
    "path-parse": "^1.0.5"
  }
}
