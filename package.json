{
  "name": "glob-pair",
  "description": "$DESCRIPTION",
  "version": "0.0.0",
  "dependencies": {},
  "scripts": {
    "lint": "xo src/**",
    "build": "babel src -d lib",
    "dev-watch": "babel src -d lib -s -w",
    "inspect": "jsinspect",
    "pretest": "npm run lint && npm run inspect",
    "test": "ava",
    "test-cov": "nyc -r text -r lcov ava",
    "posttest-cov": "echo 'View results with `npm run test-cov-results`.'",
    "test-cov-results": "(sleep 1; python3 -m webbrowser -t http://127.0.0.1:8123) & (cd coverage/lcov-report && python3 -m http.server 8123 -b 127.0.0.1)",
    "preversion": "npm run build && npm run lint && npm run test"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Jordan Klassen <forivall@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "jsinspect": "^0.7.0",
    "nyc": "^5.5.0",
    "xo": "^0.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/errmsg.git"
  },
  "babel": {
    "presets": ["es2015"]
  },
  "xo": {
    "space": 2,
    "rules": {
      "curly": [
        2,
        "multi-line",
        "consistent"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        1,
        "always-multiline"
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "esnext": true,
        "semicolon": false
      }
    ]
  }
}
